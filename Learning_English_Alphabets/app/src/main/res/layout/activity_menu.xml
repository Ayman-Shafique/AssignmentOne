<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Menu">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/alphabet_sound_view"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:onClick="AlphabetSounds"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/alphabets" />

        <ImageView
            android:id="@+id/alphabet_phonics_view"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:onClick="AlphabetPhonics"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/abc_phonics" />

        <ImageView
            android:id="@+id/alphabet_song"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:onClick="LearnAlphabetSong"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/alphabet_song_option" />

        <ImageView
            android:id="@+id/abc_song"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:onClick="AlphabetSong"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/abc_song" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>